!  xrdb -merge ~/.Xdefaults ; urxvt
xterm*dynamicColors: true
xterm*background: black
xterm*foreground: white
xterm*utf8: 2
xterm*eightBitInput: true
xterm*saveLines: 32767
xterm*scrollTtyKeypress: true
xterm*scrollTtyOutput: false
xterm*scrollBar: false
xterm*loginShell: true
xterm*faceName: Monospace:pixelsize=11
xterm*jumpScroll: true
xterm*multiScroll: true
xterm*toolBar: false
xterm*geometry: 80x25
! General
!
URxvt*termName:  		xterm-256color
URxvt*loginShell:         true
URxvt*scrollBar:         false
URxvt*secondaryScroll:    true
URxvt*saveLines:         65535
URxvt*cursorBlink:       false
URxvt*urgentOnBell:       false

! Extensions
URxvt*perl-lib:        /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,matcher,searchable-scrollback,selection-to-clipboard
URxvt*url-launcher:     /usr/bin/xdg-open
URxvt*UnderLineURLs:    true
URxvt*matcher.button:  1
!  - catch ugly URLs
URxvt.cutchars:        "`()'*<>[]{|}=:"

URxvt.font: xft:Terminus:size=9:antialias=true:hinting=false
URxvt.boldfont: xft:Terminus:size=9:antialias=true:hinting=false:bold=true
URxvt.italicfont: xft:Terminus:size=9:antialias=true:hinting=false:bold=false:italic=true
URxvt.boldItalicfont: xft:Terminus:size=9:antialias=true:hinting=false:bold=true:italic=true
URxvt.letterSpace: 1
URxvt*mapAlert: true
! fade when not active
URxvt*fading:  15

!  - cursor
URxvt*cursorColor: #017b00
!  - pseudo transparency
!URxvt*shading:    50
!URxvt*transparent:true
!
URxvt.foreground: #DDDDDD
URxvt.background: #151515
! Black
URxvt.color0:  #303030
URxvt.color8:  #404040
! Red
URxvt.color1:  #E84F4F
URxvt.color9:  #D23D3D
! Green
URxvt.color2:  #B8D68C
URxvt.color10: #A0CF5D
! Yellow
URxvt.color3:  #E1AA5D
URxvt.color11: #F39D21
! Blue
URxvt.color4:  #375695
URxvt.color12: #4E9FB1
! Magenta
URxvt.color5:  #9B64FB
URxvt.color13: #8542FF
! Cyan
URxvt.color6:  #6D878D
URxvt.color14: #42717B
! White
URxvt.color7:  #ffffff
URxvt.color15: #ffffff

! Shortcuts
!URxvt.keysym.M-C-s: command

!URxvt*iso14755:	false
